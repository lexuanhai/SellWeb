@{
    ViewData["Title"] = "Thêm mới sản phẩm";
}
<style>
    .product-add-edit{
        display: none;
    }
    .group-item {
        position: relative;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 15px;
        margin: 25px 0px;
    }

        .group-item .title-main {
            position: absolute;
            top: -12px;
            z-index: 1;
            background: #F7F7F7;
            width: 100px;
            text-align: center;
            font-size: 14px;
        }

    .product-add-edit h1 {
        text-align: center;
        color: #0098da;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .lst-img .item {
        height: 150px;
        width: 150px;
        border-radius: 4px;
        float: left;
        border: 1px solid #dadce1;
        background-color: #fff;
        text-align: center;
        margin-bottom: 16px;
        margin-right: 16px;
        position: relative;
        background-position: center !important;
        background-size: cover !important;
        background-repeat: no-repeat !important;
    }
        .lst-img .item.item-add:before{
            position: unset;
        }
        .lst-img .item .remove-img {
            color: #fff;
            float: right;
            position: absolute;
            right: 10px;
            top: 10px;
            cursor: pointer;
        }
        .lst-img .item .add-new {
            display: inline-block;
            vertical-align: middle;
            position: relative;
            width: 100%;
            height: 100%;
            padding-top: 38px;
            text-decoration: none;
        }
            .lst-img .item .add-new .plus {
                display: inline-block;
                color: #0298da;
                font-weight: 500;
                font-size: 24px;
                height: 36px;
                width: 36px;
                background-color: #efefef;
                border-radius: 50px;
                margin-bottom: 12px;
                text-align: center;
                padding: 3px;
            }
            .lst-img .item .add-new .title-name {
                color: #4a4a4a;
                font-family: Roboto;
                font-size: 15px;
                font-weight: 500;
                display: block;
            }
        .lst-img .item:before {
            content:"";
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(240,240,240,0),rgba(0,0,0,.3));
            left: 0;
        }
        .lst-img .add-new .upload-img {
            height: 100%;
            width: 100%;
            display: inline-block;
            opacity: 0;
            position: absolute;
            left: 0;
            top: 0;
            cursor: pointer;
        }
    table tr td,table tr th{
        text-align:center;
    }
    .tb-quantity tr th {
        border-bottom: unset;
    }
    .tb-quantity tr th:nth-child(2) {
        width: 130px;
    }
    .box-submit{
        text-align: center;
    }
        .box-submit .btn-cancel,
        .box-submit .btn-save {
            padding: 7px 36px;
        }
    .tb-quantity tbody tr td {
        vertical-align: middle !important;
    }
    .tb-quantity .btn-edit-quantity{
        float:left;
    }
    .tb-quantity .btn-delete-quantity{
        float:right;
    }

</style>
@section Styles{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}
<div class="product-add-edit">
    <form id="form_submit" method="post" action="#">
        <div class="container">
            <h1>Thêm mới sản phẩm</h1>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="title">Tên sản phẩm<span class="red">*</span>:</label>
                        <input type="text" placeholder="Nhập tên sản phẩm" class="form-control" id="name" name="name" autocomplete="off" />
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label class="title">Danh mục cha<span class="red">*</span>:</label>
                            <select id="categoryParentId" class="form-control">
                                <option class="" value="0">Danh mục cha</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label class="title">Danh mục con<span class="red">*</span>:</label>
                            <select id="subCategoryId" class="form-control">
                                <option class="" value="0">Danh mục con</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group group-item">
                        <label class="title title-main">Giá sản phẩm<span class="red">*</span></label>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="">Giá bán<span class="red">*</span></label>
                                <input type="text" class="form-control price" id="price" autocomplete="off" name="price" />
                            </div>
                            <div class="col-sm-6">
                                <label class="">Giá khuyến mãi</label>
                                <input type="text" class="form-control price" id="promotionalPrice" autocomplete="off" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group group-item">
                        <label class="title title-main">Hạn sử dụng<span class="red">*</span></label>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="">Ngày sản xuất</label>
                                <input type="text" class="form-control date-format" id="manufactureDate" autocomplete="off" name="manufactureDate" />
                            </div>
                            <div class="col-sm-6">
                                <label class="">Ngày hết hạn</label>
                                <input type="text" class="form-control date-format" id="expirationDate" autocomplete="off" name="expirationDate" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="title">Seo Title<span class="red">*</span>:</label>
                        <input type="text" class="form-control "  />
                    </div>
                    <div class="form-group">
                        <label class="title">Seo Keyword<span class="red">*</span>:</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="title">Hình ảnh<span class="red">*</span>:</label>
                        <div class="lst-img">
                            <div class="item item-add">
                                <a href="javascript:void(0)" title="Thêm ảnh" class="add-new">
                                    <span class="plus">+</span>
                                    <span class="title-name">Thêm ảnh</span>
                                    <input type="file" multiple="multiple" class="upload-img" id="images" name="images[]">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="box-quantity" style="width: 100%; display: inline-block">
                            <label class="title">Số lượng sản phẩm <span class="red">*</span></label>
                            <div class="lst-quantity">
                                <table class="table table-striped table-hover tb-quantity">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Số lượng</th>
                                            <th>Kích thước</th>
                                            <th>Màu sắc</th>
                                            <th>
                                                <a class="btn-add-quantity btn btn-success fa fa-plus" title="thêm mới" href="javascript:void(0)"></a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="title">Tiêu đề<span class="red">*</span>:</label>
                <textarea id="titleProduct" rows="3" cols="5" name="titleProduct" contenteditable="true"></textarea>
            </div>
            <div>
                <div class="form-group">
                    <label class="title">Nội dung<span class="red">*</span>:</label>
                    <textarea class="form-control" id="content" rows="100" cols="15" name="content"></textarea>
                </div>
            </div>
            <div class="box-submit">
                <button class="btn btn-primary btn-save" title="lưu" type="submit">Lưu</button>
                <a class="btn btn-danger btn-cancel" title="hủy" href="/admin/produc">Hủy</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/BootstrapCK4-Skin-master/ckeditor.js"></script>
    <script src="~/admin/js/product.js?v=@DateTime.Now.Ticks"></script>
}