
@{
    Layout = null;
}
<style>
    #assignrole .modal-header {
        border-bottom: unset;
    }
</style>
<input type="hidden" id="user_id"/>
<div class="modal fade" id="assignrole" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="#" id="form_assignrole">
                <div class="modal-header">
                    <h5 class="modal-title">Gán vai trò cho người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-hover tree" id="tblFunction">
                        <thead class="bordered-darkorange">
                            <tr>
                                <th class="title">Tên vai trò</th>
                                <th class="">Sét vai trò</th>
                            </tr>
                        </thead>
                        <tbody id="lst-role">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-set-role">Lưu</button>
                    <button type="button" class="btn btn-secondary btn-cancel" data-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>