
@{
    Layout = null;
}
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="#" id="form_function">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Danh Mục</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Tên danh mục<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Nhập tên danh mục" class="form-control" id="name" name="name" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Danh mục cha <span class="red">*</span></label>
                        <div class="col-sm-9">
                            <select class="form-control" id="parentId">
                                <option value="0">Chọn danh mục cha</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Icon<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Nhập tên icon" class="form-control" id="iconCss" name="icon" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Url<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Nhập url" class="form-control" id="url" name="url" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Thứ tự<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="number" placeholder="Thứ tự" class="form-control" id="sortOrder" name="sortOrder" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Trạng thái<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <select class="form-control" id="status">
                                <option value="1" selected>Hoạt động</option>
                                <option value="2">Chờ hoạt động</option>
                                <option value="3">Tạm ẩn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-save">Lưu</button>
                    <button type="button" class="btn btn-secondary btn-cancel" data-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>