
@{
    Layout = null;
}
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="#" id="form_role">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm quyền</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Tên quyền<span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Nhập tên quyền" class="form-control" id="name" name="name" autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="sub-title col-sm-3">Mô tả <span class="red">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" placeholder="Mô tả tên quyền" class="form-control" id="description" name="description" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-save">Lưu</button>
                    <button type="button" class="btn btn-secondary btn-cancel" data-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>